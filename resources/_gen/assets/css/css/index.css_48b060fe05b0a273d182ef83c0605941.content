.sitetitle,.sitedesc{word-spacing:.2rem}.sitedesc{font-weight:400}.infoboxes{display:flex;flex-direction:row;gap:1rem;padding:1rem 0}.info{background-color:var(--primary-bg);color:var(--primary-text);border-radius:.5rem;padding:1rem}.info a{color:var(--primary-text);text-decoration:underline}@media(max-width:768px){.infoboxes{flex-direction:column}.info{width:100%}}.info *::selection{background-color:var(--primary-text);color:var(--primary-bg)}.info *::-moz-selection{background-color:var(--primary-text);color:var(--primary-bg)}