.tags{display:flex;flex-direction:row;justify-content:center;align-items:center}.tags p{padding:0 .5rem;margin:.5rem;background-color:var(--primary-bg);color:var(--primary-text);border-radius:.5rem}.tags p::selection{background-color:var(--primary-text);color:var(--primary-bg)}.tags p::-moz-selection{background-color:var(--primary-text);color:var(--primary-bg)}details{display:grid;padding:1rem;border-radius:.5rem;background-color:var(--details-bg);color:var(--details-text);margin:.5rem 0}details ul{display:grid;grid-gap:.5rem;grid-auto-flow:row;grid-template-columns:repeat(auto-fit,minmax(8rem,1fr));list-style-type:none;padding-left:0}details li{text-align:center;padding:1rem;border-radius:.5rem;white-space:nowrap}details a{color:var(--details-text)!important}details summary{font-weight:700;cursor:pointer}details *::selection{background-color:var(--details-text);color:var(--details-bg)}details *::-moz-selection{background-color:var(--details-text);color:var(--details-bg)}.warning{display:grid;padding:1rem;border-radius:.5rem;background-color:var(--warning-bg);color:var(--warning-text);margin:.5rem 0}.warning a{color:var(--warning-text);text-decoration:underline}.warning p,.warning li{margin:.5rem 0}.warning ul{margin:0}.warning *::selection{background-color:var(--warning-text);color:var(--warning-bg)}.warning *::-moz-selection{background-color:var(--warning-text);color:var(--warning-bg)}.note{display:grid;padding:1rem;border-radius:.5rem;background-color:var(--note-bg);color:var(--note-text);margin:.5rem 0}.note a{color:var(--note-text);text-decoration:underline}.note p,.note li{margin:.5rem 0}.note ul{margin:0}.note *::selection{background-color:var(--note-text);color:var(--note-bg)}.note *::-moz-selection{background-color:var(--note-text);color:var(--note-bg)}.quote{display:grid;padding:1rem;border-radius:.5rem;background-color:var(--primary-bg);color:var(--primary-text);margin:.5rem 0}.quote a{color:var(--primary-text);text-decoration:underline}.quote p,.quote li{margin:.5rem 0}.quote ul{margin:0}.quote *::selection{background-color:var(--primary-text);color:var(--primary-bg)}.quote *::-moz-selection{background-color:var(--primary-text);color:var(--primary-bg)}hr{border:none;border-top:solid .125rem var(--variant);width:100%}blockquote{border-left:.125 solid var(--outline);padding:.25rem 1rem;margin-inline-start:2rem}article{margin:0 auto}article h1,article h2,article h3,article h4,article h5,article h6{scroll-margin-top:12vh}article h1{font-size:2rem}article h2{border-top:solid .125rem var(--variant);padding-top:1rem}article li{margin:1.25rem 0;line-height:1.5rem}.posttitle,.postdate,.postdesc{margin:1rem 0;text-align:center;font-weight:700}.readingtime{font-style:italic;margin:1rem 0;text-align:center}.task-list{padding-inline-start:1rem}.task-list li{position:relative;list-style-type:none;margin:1rem}[type=checkbox]{position:absolute;inset-inline-start:-1.5rem;visibility:hidden}[type=checkbox]::before{position:absolute;height:1rem;width:1rem;content:'';-webkit-mask:url(/svg/unchecked.svg);mask:url(/svg/unchecked.svg);background-color:var(--text);visibility:visible}[type=checkbox][checked]::before{-webkit-mask:url(/svg/checked.svg);mask:url(/svg/checked.svg);height:1rem;width:1rem}.highlight pre{border-radius:.5rem;padding:1rem;overflow:auto;font-size:.875rem}code:not(.highlight code){background-color:#272822;color:#f8f8f2;border-radius:.5rem;padding:.125rem}.author{text-align:right;font-style:italic}