---
const { title } = Astro.props;
---

<details>
    <summary>{title}</summary>
    <slot />
</details>

<style lang="scss">
    details {
        display: grid;
        padding: 1rem;
        border-radius: 0.5rem;
        background-color: var(--details-bg);
        color: var(--details-text);
        margin: 0.5rem 0;

        :global(ul) {
            display: grid;
            grid-auto-flow: row;
            grid-template-columns: repeat(auto-fit, minmax(10rem, 1fr));
            list-style-type: none;
            padding-left: 0;
            margin: 0;
        }

        :global(li) {
            text-align: center;
        }

        :global(a) {
            color: var(--details-text) !important;
        }

        summary {
            font-weight: bold;
            cursor: pointer;
        }

        :global(*)::selection {
            background-color: var(--details-text);
            color: var(--details-bg);
        }

        :global(*)::-moz-selection {
            background-color: var(--details-text);
            color: var(--details-bg);
        }
    }
</style>
